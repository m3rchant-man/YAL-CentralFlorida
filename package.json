{
  "name": "eleventy-tailwind-site",
  "version": "1.0.0",
  "description": "A beautiful Eleventy static site with Tailwind CSS",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/css/input.css -o ./_site/css/style.css --minify",
    "watch:css": "npx tailwindcss -i ./src/css/input.css -o ./_site/css/style.css --watch",
    "build:11ty": "npx @11ty/eleventy",
    "watch:11ty": "npx @11ty/eleventy --serve",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all build:css build:11ty"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.1"
  }
}



